{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run without debugging",
            "type": "node-terminal",
            "request": "launch",
            "command": "make run",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Debug API",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/api"
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/${relativeFileDirname}",
            "showLog": true
        }
    ]
}